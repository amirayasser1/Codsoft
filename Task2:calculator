print("Hello,this is my calculator")
while 1:
  num_1=float(input("Enter the first number: "))
  operator = input("Enter operator: ")
  num_2=float(input("Enter the second number: "))
  if operator== "+":
     print(num_1+num_2)
  elif operator=="-":
     print(num_1-num_2)
  elif operator=="*":
      print(num_1*num_2)
  elif operator=="/":
     print(num_1/num_2)
  elif operator=="%":
    print(num_1%num_2)
  else:
     print("Invalid")
